<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidbootstrap.bootstrap">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <!--specify that the app supports NFC-->
    <uses-permission android:name="android.permission.NFC"/>

    <uses-feature android:name="android.hardware.nfc"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bootstrap">

        <!-- Login -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.Bootstrap.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bootstrap.NoActionBar">
        </activity>

        <!-- Setting -->
        <activity
            android:label="@string/app_name"
            android:theme="@style/Theme.Bootstrap.NoActionBar"
            android:name=".SettingActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!--NFC-->
        <activity android:name=".SenderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--Pour que l'activité puisse recevoir des messages NDEF d'un autre appareil, nous spécifions un filtre d'intention dans le fichier AndroidManifest :-->

        <activity android:name=".ReceiverActivity">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity android:name=".ShoppingCartActivity">
        </activity>
    </application>

</manifest>